<h3>Login</h3>

<form action="/login" method="post">
    <div>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Log In"/>
    </div>
</form> 